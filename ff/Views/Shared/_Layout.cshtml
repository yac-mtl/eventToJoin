                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EventToJoin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                  
                </ul>
                <ul class="nav navbar-nav" style="float:right !important">
                    @if (Session["email"] != null && Session["email"].Equals("admin") && Session["e"].Equals("admlarkemyacine21@gmail.comin"))
                    {
                        <li><p style="color:#fff;margin-top:15px;"> @Session["e"] </p></li>
                        <li>@Html.ActionLink("logout", "logout", "Home")</li>
                        <li>@Html.ActionLink("Profil", "Profil", "Home")</li>
                        <li>@Html.ActionLink("Liste des utilisateurs", "Index", "personnes")</li>
                        <li>@Html.ActionLink("Liste administrateur", "Index", "administrateurs")</li>
                        <li>@Html.ActionLink("tous les evenements", "liste", "evenements")</li>
                    }
                    else if (Session["email"] != null && Session["email"].Equals("admin") )
                    {
                        <li><p style="color:#fff;margin-top:15px;"> @Session["e"] </p></li>
                        <li>@Html.ActionLink("logout", "logout", "Home")</li>
                        <li>@Html.ActionLink("Profil", "Profil", "Home")</li>
                        <li>@Html.ActionLink("Liste des utilisateurs", "Index", "personnes")</li>
                        <li>@Html.ActionLink("Liste administrateur", "Index", "administrateurs")</li>
                        <li>@Html.ActionLink("tous les evenements", "liste", "evenements")</li>
                    }
                    else if (Session["email"] != null)
                    {
                        <li><p style="color:#fff;margin-top:15px;"> @Session["email"] </p></li>
                        <li>@Html.ActionLink("logout", "logout", "Home")</li>
                        <li>@Html.ActionLink("Profil", "Profil", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("signup", "Create", "personnes")</li>
                        <li>@Html.ActionLink("login", "login", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
